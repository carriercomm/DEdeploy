#!/bin/bash

echo Setting up iptables...

iptables -t nat -A POSTROUTING -j MASQUERADE

echo Waiting for pipework to give us the eth1 interface...

/root/pipework --wait -i eth0

echo Starting DHCP+TFTP server...

dnsmasq --interface=eth1 --dhcp-range=192.168.242.2,192.168.242.99,255.255.255.0,1h --dhcp-boot=pxelinux.0,pxeserver,192.168.242.1 --pxe-service=X86-64_EFI,"Install Linux",pxelinux --log-dhcp --dhcp-leasefile=/data/dhcpleases --enable-tftp --tftp-root=/tftp/ --no-daemon